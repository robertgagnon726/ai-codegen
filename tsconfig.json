{
    "compilerOptions": {
      "target": "ESNext",
      "module": "Node16",
      "lib": ["ES2020"],
      "moduleResolution": "node16",     // Changed to node16 or nodenext
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true, // Optional, for better ESM and CJS interop
      "resolveJsonModule": true              // Optional, if importing JSON files
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  