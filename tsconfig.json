{
    "compilerOptions": {
        "target": "ES2020",                               
        "module": "CommonJS",                             
        "lib": ["ES2020"],                                
        "declaration": true,                              
        "outDir": "./dist",                               
        "esModuleInterop": true,                          
        "strict": true,                                   
        "skipLibCheck": true,                             
        "forceConsistentCasingInFileNames": true   
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
  